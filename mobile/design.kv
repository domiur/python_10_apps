<LoginScreen>:
    GridLayout:
        cols:1
        padding: 15, 15
        spacing: 400, 4
        GridLayout:
            cols:1
            Label:
                text:"user login"
                font_size:"20sp"
            TextInput:
                id:username
                hint_text:"username"
            TextInput:
                id:password
                password: True
                hint_text:"passsword"
            RelativeLayout:
                Button:
                    text:"Login"
                    on_press:root.login(root.ids.username.text,root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x':0.5,'center_y':0.6}
            Label:
                id:login_wrong
                text:""
        GridLayout:
            cols:2
            size_hint:0.2,0.2
            padding: 10,10
            spacing: 10,0
            Button:
                text:"Forgot password"
                background_color:1,1,1,0
                opacity: 1 if self.state=="normal" else 0.5
                color: 0.1, 0.7, 0.1, 1
            Button:
                text:"Sign up"
                on_press:root.sing_up()
                background_color:1,1,1,0
                opacity: 1 if self.state=="normal" else 0.5
                color: 0.1, 0.7, 0.1, 1
<SignupScreen>:
    GridLayout:
        cols:1
        padding: 20,20
        spacing: 20,20
        Label:
            text:"Sign up!"
        TextInput:
            id: username
            hint_text:"username"
        TextInput:
            id:password
            hint_text:"password"
        Button:
            text:"Submit"
            on_press:root.add_user(root.ids.username.text,root.ids.password.text)

<SignupScreenSuccess>:
    GridLayout:
        cols:1
        padding: 30,30
        spacing: 30,30
        Label:
            text:"Signup is successful!"
        Button:
            text:"Login page"
            on_press: root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        RelativeLayout:
            ImageButton:
                size_hint:0.35,.35
                source:'logout_hover.png' if self.hovered else 'logout_nothover.png'
                on_press:root.logout()
                pos_hint: {'center_x':0.93,'center_y':0.8}
        Label:
            text:"How do you feel?"
        TextInput:
            hint_text:"emotion"
            id:feeling
        Button:
            text:"Enlight me!"
            on_press:root.enlight(root.ids.feeling.text)
        ScrollView:
            Label:
                text:""
                id:quote
                text_size:self.width,None
                size_hint_y:None
                height: self.texture_size[1]
<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignupScreen:
        name:"signup_screen"
    SignupScreenSuccess:
        name:"signup_screen_success"
    LoginScreenSuccess:
        name:"login_screen_success"