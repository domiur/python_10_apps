<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text:"user login"
            TextInput:
                id:username
                hint_text:"username"
            TextInput:
                id:password
                hint_text:"passsword"
            Button:
                text:"Login"
                on_press:root.login(root.ids.username.text,root.ids.password.text)
            Label:
                id:login_wrong
                text:""
        GridLayout:
            cols:2
            Button:
                text:"Forgot password"
            Button:
                text:"Sign up"
                on_press:root.sing_up()
<SignupScreen>:
    GridLayout:
        cols:1
        Label:
            text:"Sign up!"
        TextInput:
            id: username
            hint_text:"username"
        TextInput:
            id:password
            hint_text:"password"
        Button:
            text:"Submit"
            on_press:root.add_user(root.ids.username.text,root.ids.password.text)

<SignupScreenSuccess>:
    GridLayout:
        cols:1
        Label:
            text:"Signup is successful!"
        Button:
            text:"Login page"
            on_press: root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        Button:
            text:"Logout"
            on_press:root.logout()
        Label:
            text:"How do you feel?"
        TextInput:
            hint_text:"emotion"
            id:feeling
        Button:
            text:"Enlight me!"
            on_press:root.enlight(root.ids.feeling.text)
        Label:
            text:""
            id:quote

<RootWidget>:
    LoginScreen:
        name:"login_screen"
    SignupScreen:
        name:"signup_screen"
    SignupScreenSuccess:
        name:"signup_screen_success"
    LoginScreenSuccess:
        name:"login_screen_success"